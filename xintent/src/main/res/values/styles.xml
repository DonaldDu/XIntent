    <style name="xintent_simple_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">@dimen/xintent_text_size_button</item>
        <item name="android:textColor">@color/xintent_default_content</item>
        <item name="android:textColorHint">@color/xintent_default_gray_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="xintent_pop_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/xintent_activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/xintent_activity_horizontal_margin</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>
