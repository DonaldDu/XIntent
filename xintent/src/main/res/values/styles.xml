<resources>

    <style name="xintent_button_simple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minHeight">@dimen/xintent_simple_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/xintent_text_size_button</item>
    </style>

    <style name="xintent_button_blue" parent="xintent_button_simple">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/xintent_button_blue</item>
    </style>

